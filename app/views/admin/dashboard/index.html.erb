  Created: <%= order.created_at %></section>
<%end%>
<%end%>

<h1> Cancelled Orders </h1>
<% @orders.each do |order| %>
<% if order.current_status == "cancelled" %>
<section id = "order-cancelled">
  Order ID: <%= order.id %>
  Name: <%=link_to "#{order.name}", "/admin/profile/#{order.user.id}" %>
  Created: <%= order.created_at %></section>
<% end %>
<% end %>
