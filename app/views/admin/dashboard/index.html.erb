<h1> All Orders </h1>

<h1> Packaged Orders </h1>
<% @orders.each do |order| %>
<% if order.current_status == "packaged" %>
<section id = "order-<%= order.id %>" >
  Order ID: <%= order.id %>
  Name: <%=link_to "#{order.name}", "/admin/profile/#{order.user.id}" %>
  Created: <%= order.created_at %>
  <%= button_to "Ship Order", "/admin/orders/#{order.id}", method: :patch %>
  </section>
<%end%>
<%end>

<h1> Pending Orders </h1>
<% @orders.each do |order| %>
<% if order.current_status == "pending" %>
<section id = "order-pending">
  Order ID: <%= order.id %>
  Name: <%=link_to "#{order.name}", "/admin/profile/#{order.user.id}" %>
  Created: <%= order.created_at %>
</section>
<%end%>
<%end%>


<h1> Shipped Orders </h1>
