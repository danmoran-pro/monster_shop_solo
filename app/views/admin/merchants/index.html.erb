<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item">
      <% if current_admin? %>
        <section id="merchant-<%= merchant.id %>">
          <h2><%=link_to merchant.name, "/admin/merchants/#{merchant.id}"%></h2>
        <% if merchant.enabled? %>
          <%= button_to 'Disable Merchant', "/admin/merchants/#{merchant.id}", method: :patch %>
        <% else%>
          <%= button_to 'Enable Merchant', "/admin/merchants/#{merchant.id}", method: :patch %>
        <% end %>
        <%= merchant.city %>
        <%= merchant.state %>
        </section>
    </section>
      <% else %>
      <h2><%=link_to merchant.name, "/merchants/#{merchant.id}"%></h2>
    </section>
    <% end %>
  <% end %>
</section>
