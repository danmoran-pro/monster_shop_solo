<h1>Merchant Items Page</h1>

<% @merchant.items.each do |item| %>
<section id="item-<%=item.id%>">
  <%=  item.name %>
  <%=  item.description %>
  <%=  item.price %>
  <%=  image_tag(item.image) %>
  <% if item.active? %>
    <p>Active</p>
  <% else %>
    <p>Inactive</p>
  <% end %>
  <%= item.inventory %>
  <% if item.no_orders? %>
    <%= link_to "Delete Item", "/merchant/items/#{item.id}", method: :delete %>
  <% end %>
</section>
<% end %>
